{
  "manifest_version": 3,
  "name": "slop-stop",
  "version": "1.0.0",
  "description": "Community-driven curation layer that identifies and hides 'Slop' content on Twitter, YouTube, LinkedIn, and the internet",
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://youtube.com/*",
    "*://linkedin.com/*",
    "*://www.linkedin.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": ["content/content-main.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "*://youtube.com/*"
      ],
      "js": ["content/content-main.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "*://linkedin.com/*",
        "*://www.linkedin.com/*"
      ],
      "js": ["content/content-main.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content/content-main.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": false,
      "exclude_matches": [
        "*://twitter.com/*",
        "*://x.com/*",
        "*://youtube.com/*",
        "*://linkedin.com/*",
        "*://www.linkedin.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Stop-Slop Settings"
  },
  "commands": {
    "toggle-trash-mode": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle trash mode to report slop content"
    },
    "report-website": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "Alt+U"
      },
      "description": "Report current website as slop"
    }
  },
  "icons": {
    "16": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3E%3Cpath fill='%23ff4444' d='M2 4h12M5 4V2a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2m-6 0v10a1 1 0 0 0 1 1h4a1 1 0 0 0 1-1V4M6 7v6M10 7v6'/%3E%3C/svg%3E",
    "48": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'%3E%3Cpath fill='%23ff4444' d='M6 12h36M15 12V6a3 3 0 0 1 3-3h12a3 3 0 0 1 3 3v6m-18 0v30a3 3 0 0 0 3 3h12a3 3 0 0 0 3-3V12M18 21v18M30 21v18'/%3E%3C/svg%3E",
    "128": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'%3E%3Cpath fill='%23ff4444' d='M16 32h96M40 32V16a8 8 0 0 1 8-8h32a8 8 0 0 1 8 8v16m-48 0v80a8 8 0 0 0 8 8h32a8 8 0 0 0 8-8V32M48 56v48M80 56v48'/%3E%3C/svg%3E"
  }
}
